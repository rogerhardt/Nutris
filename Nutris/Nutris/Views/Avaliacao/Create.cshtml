@model Nutris.Models.Avaliacao

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutNutri.cshtml";
}

<h2>Cadastrar Avaliação</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Avaliação</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
      
        <div class="col-md-10">
            @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control" } })

            @Html.LabelFor(model => model.loginNutricionista, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.loginNutricionista, new { htmlAttributes = new { @class = "form-control" } })

            @Html.LabelFor(model => model.loginPaciente, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.loginPaciente, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Detalhe, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <textarea cols="20" htmlattributes="{ class = form-control }" id="Descricao" name="Detalhe" rows="2" style="margin: 0px; width: 280px; height: 178px;"></textarea>
            @Html.ValidationMessageFor(model => model.Detalhe, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" class="btn btn-default" value="Retornar" onclick="location.href='@Url.Action("Index")'" />
            <input type="submit" value="Salvar" class="btn btn-default" />
        </div>
    </div>
</div>
}
