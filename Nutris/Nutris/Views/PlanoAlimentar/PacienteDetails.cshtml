@model Nutris.Models.PlanoAlimentarViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div>
    <h2>@Html.DisplayFor(modelItem => Model.PlanoAlimentar.Nome)</h2>
    <h4>@Html.DisplayFor(modelItem => Model.PlanoAlimentar.Descricao)</h4>
    <p></p>
    <h5>Dieta do Plano:</h5>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Descrição</th>
                <th scope="col">Quantidade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantia)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p>
    <input type="button" class="btn btn-default btn-sm" value="Retornar" onclick="location.href='@Url.Action("IndexPaciente")'" />
</p>
