@model Nutris.Models.PlanoPaciente

@{
    ViewBag.Title = "Incluir Paciente";
    Layout = "~/Views/Shared/_LayoutNutri.cshtml";
}

<h2>Incluir Paciente</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PlanoAlimentar</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdPlanoAlimentar)
        <div class="form-group">
            @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" class="btn btn-default" value="Retornar" onclick="location.href='@Url.Action("PlanoPacienteIndex", new { id = Model.IdPlanoAlimentar })'" />
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
